<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageCrop.PhotoCropPage">

    <!-- Pinch and Zoom control -->
    <StackLayout HorizontalOptions="Fill" VerticalOptions="Center">
        <Image Source="https://photos2.insidercdn.com/iphone4scamera-111004-full.JPG"/>
        <Button Text="Start Crop" Command="{Binding StartCropCommand}"/>
        <Image Source="{Binding ImageSource}" />
    </StackLayout>

</ContentPage>
